@model Main.Models.IndexViewModel
@{
    ViewBag.Title = "Manage Your Account";
}
<h2>@ViewBag.Title</h2>


<p class="text-success">@ViewBag.StatusMessage</p>
<div>

    <img width="256" height="256" alt="User Avatar Picture"
         src="@ViewBag.Avatar" />
    </a>

    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>

            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword", null, new { @class = "btn btn-primary" })
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword", null, new { @class = "btn btn-primary" })
            }

        </dd>



        <dt>External Logins:</dt>
        <dd>
            @Model.Logins.Count
            @Html.ActionLink("Manage", "ManageLogins", null, new { @class = "btn btn-primary" })
        </dd>

        Phone Numbers can used as a second factor of verification in a two-factor authentication system.

        See
        <a href="http://go.microsoft.com/fwlink/?LinkId=313242">this article</a>
        for details on setting up this ASP.NET application to support two-factor authentication using SMS.

        Uncomment the following block after you have set up two-factor authentication


        <dt>Phone Number:</dt>
        <dd>
            @(Model.PhoneNumber ?? "None")
            @if (Model.PhoneNumber != null)
            {
                @Html.ActionLink("Change", "AddPhoneNumber", null, new { @class = "btn btn-primary" })
                @: &nbsp;|&nbsp;
                @Html.ActionLink("Remove", "RemovePhoneNumber", null, new { @class = "btn btn-primary" })
            }
            else
            {
                @Html.ActionLink("Add", "AddPhoneNumber", null, new { @class = "btn btn-primary" })
            }
        </dd>

        <dt>Two-Factor Authentication:</dt>
        <dd>
            <p>
                There are no two-factor authentication providers configured. See <a href="http://go.microsoft.com/fwlink/?LinkId=313242">this article</a>
                for details on setting up this ASP.NET application to support two-factor authentication.
            </p>
            @if (Model.TwoFactor)
            {

                <form method="post" action="/Manage/DisableTwoFactorAuthentication">
                    <span style="color:green;">Currently Enabled</span>
                    <input type="submit" value="Disable" class="btn btn-danger" />
                </form>
            }
            else
            {

                <form method="post" action="/Manage/EnableTwoFactorAuthentication">
                    <span style="color:red;">Currently Disabled</span>
                    <input type="submit" value="Enable" class="btn btn-success" />
                </form>
            }
        </dd>
    </dl>
</div>

<div class="container-fluid">
    <video autoplay id="vid" width="256" height="256" style="border:1px solid #d3d3d3;"></video>
    <canvas id="canvas" style="border:1px solid #d3d3d3;" width="256" height="256"></canvas><br>
    <button onclick="snapshot()">Take Picture</button>

    <script type="text/javascript">
            var video = document.querySelector("#vid");
            var canvas = document.querySelector('#canvas');
            var ctx = canvas.getContext('2d');
            var localMediaStream = null;

            var onCameraFail = function (e) {
                console.log('Camera did not work.', e);
            };

            function snapshot() {
                if (localMediaStream) {
                    ctx.drawImage(video, 0, 0, 256, 256);
                    console.log(canvas.toDataURL());
                    $("#avatar").val(canvas.toDataURL());
                }
            }


            /*   video.clientHeight(256);
               video.clientWidth(256);*/

            navigator.getUserMedia = navigator.getUserMedia || navigator.webkitGetUserMedia || navigator.mozGetUserMedia || navigator.msGetUserMedia;
            window.URL = window.URL || window.webkitURL;
            navigator.getUserMedia({ video: true }, function (stream) {
                video.src = window.URL.createObjectURL(stream);
                localMediaStream = stream;
            }, onCameraFail);
    </script>
</div>


@using (Html.BeginForm("ChangeAvatar", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        
        <input id="avatar" type="hidden" name="avatar" />

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="save Avatar" class="btn btn-success pull-right" />
            </div>
        </div>
    </div>
}

<br /><br /><br />



    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">

                <table class="table">
                    <tr>
                        <th>
                            Title
                        </th>
                        <th>
                            ViewCount
                        </th>
                        <th></th>
                    </tr>

                    @{
                        int itemCount = 0;
                        foreach (var item in ViewData["posts"] as List<Main.Post>)
                        {
                            itemCount = itemCount + 1;
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ViewCount)
                                </td>
                                <td>
                                    @Html.ActionLink("View", "Details", "Posts", new { id = item.PostID }, new { @class = "btn btn-success pull-right" })
                                    @Html.ActionLink("Edit", "Edit", "Posts", new { id = item.PostID }, new { @class = "btn btn-warning pull-right" })
                                </td>
                            </tr>
                        }

                        if (itemCount == 0)
                        {
                            <tr>
                                <td>
                                    You have no posts yet!
                                </td>
                            </tr>
                        }
                    }
                </table>

            </div>
            <div class="col-md-6">
                <table class="table">
                    <tr>
                        <th>
                            Comment
                        </th>
                        <th>
                            Date
                        </th>
                        <th></th>
                    </tr>

                    @{
                        itemCount = 0;
                        foreach (var item in ViewData["comments"] as List<Main.Comment>)
                        {
                            itemCount = itemCount + 1;
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CommentDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CommentDate)
                                </td>
                                <td>
                                    @Html.ActionLink("View", "Details", "Posts", new { id = item.PostID }, new { @class = "btn btn-success pull-right" })
                                </td>
                            </tr>
                        }

                        if (itemCount == 0)
                        {
                            <tr>
                                <td>
                                    You have no comments yet!
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
        </div>
    </div>
